      </div>


      
      <div class="my-3 md:flex md:flex-col mt-12">
        <div class="flex-auto space-y-2">
          {photo.data.price ? (
           <h2 class="text-3xl font-bold">Rp. {photo.data.price}</h2>
          ) : (
            <h2 class="text-3xl font-bold"></h2>
          )}
        </div>
    </div>
  </Section>
</BaseLayout>
